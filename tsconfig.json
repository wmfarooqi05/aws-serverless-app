{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@functions/*": ["src/functions/*"],
      "@common/*": ["src/common/*"],
      "@models/*": ["src/models/*"],
      "@helpers/*": ["src/helpers/*"],
      "@types/*": ["src/types/*"],
      "@libs/*": ["src/libs/*"],
      // "/opt/nodejs/*": ["layers/nodejs/node_modules/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "serverless.ts",
    "knex/knexfile.ts",
    "knex-conf.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "layers/nodejs/node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
